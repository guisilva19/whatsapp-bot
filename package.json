{
  "name": "whatsapp-bot",
  "version": "1.0.0",
  "description": "Whatsapp integration with Node.js.",
  "author": "Guilherme Silva",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "dev": "nodemon --exec ts-node ./app/server.ts",
    "start": "node ./dist/server.js",
    "dev-simple": "nodemon --exec ts-node ./app/server-simple.ts",
    "start-simple": "node ./dist/server-simple.js",
    "postinstall": "prisma generate",
    "clean": "rm -rf .cache node_modules/.cache dist",
    "reinstall": "npm run clean && npm install",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio"
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.23.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/qrcode-terminal": "^0.12.2",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
